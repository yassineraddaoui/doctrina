package com.doctrina.space.services;

import com.doctrina.space.entity.Account;
import com.doctrina.space.repository.AccountRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.security.crypto.bcrypt.BCryptPasswordEncoder;
import org.springframework.stereotype.Service;

import java.util.Optional;

@Service
public class AccountService {
    @Autowired
    private AccountRepository accountRepo;
    @Autowired
    private BCryptPasswordEncoder passwordEncoder;

    public void createAccount(Account account) {
        if (account.getPassword() != null && !account.getPassword().isEmpty()) {
            String rawPassword = account.getPassword();
            System.out.println("Raw password for " + account.getEmail() + ": " + rawPassword);
            account.setPassword(rawPassword); // Store raw password for testing
        } else {
            System.out.println("Password is null or empty for " + account.getEmail());
        }
        accountRepo.save(account);
    }

    public Optional<Account> findByEmail(String email) {
        return accountRepo.findByEmail(email);
    }

    public String hashPassword(String password) {
        return passwordEncoder.encode(password);
    }
}